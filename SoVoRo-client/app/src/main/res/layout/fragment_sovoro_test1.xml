<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testview.SoVoRoTest1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/sovoro_question_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35"
            android:padding="20dp"
            />

        <TextView
            android:id="@+id/sovoro_answer_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:text="ans_1"
            android:textSize="35dp"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="100dp"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_question_1" />


        <TextView
            android:id="@+id/sovoro_answer_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:text="ans_2"
            android:textSize="35dp"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="100dp"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_answer_1_1" />


        <TextView
            android:id="@+id/sovoro_answer_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:text="ans_3"
            android:textSize="35dp"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="100dp"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_answer_1_2" />

        <TextView
            android:id="@+id/sovoro_answer_1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingRight="20dp"
            android:text="ans_4"
            android:textSize="35dp"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="100dp"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_answer_1_3" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sovoro_answer_1_1"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/sovoro_test_radio_group_1"
            >
            <RadioButton
                android:id="@+id/sovoro_answer_radio_1_1"
                android:layout_marginRight="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                />
            <RadioButton
                android:id="@+id/sovoro_answer_radio_1_2"
                android:layout_marginRight="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                />
            <RadioButton
                android:id="@+id/sovoro_answer_radio_1_3"
                android:layout_marginRight="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                />
            <RadioButton
                android:id="@+id/sovoro_answer_radio_1_4"
                android:layout_marginRight="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                />
        </RadioGroup>
        <Button
            android:id="@+id/sovoro_test_submit_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제출"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_test_radio_group_1"
            android:layout_marginTop="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>